<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render'users/list', user:@user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th>title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
       </thead>

       <tbody>
        <% @books.each do |book| %>
         <tr>
          <td>
           <% if @user.profile_image.attached? %>
            <%= image_tag user.profile_image(100,100) %>
           <% else %>
            <%= image_tag'no_image.jpg' %>
           <% end %>
          </td>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
         </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>





<div class="container px-5 px-sm-0">
  <div class="row">
   <%= render'users/list', user:@user, book:@book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
       <tbody>
         <tr>
          <td>
           <% if @book2.user.profile_image.attached? %>
            <%= link_to image_tag @user.get_profile_image(100,100) %>
           <% else %>
            <%= link_to image_tag('no_image.jpg') %>
           <% end %>
          <br><%= link_to @user.name, user_path(@user)  %></td>
          <td><%= link_to @book2.title, book_path(@book2) %></td>
          <td><%= @book2.body %></td>
          <% if @book2.user == current_user %>
           <td><%= link_to"Edit", edit_book_path(@book2.id), class:'btn btn-sm btn-success' %></td>
           <td><%= link_to"Destroy", book_path(@book2.id), method: :delete, "data-confirm" => "本当に消しますか？", class:'btn btn-sm btn-danger' %></td>
          <% end %>
         </tr>
       </tbody>
      </table>
    </div>
  </div>
</div>
